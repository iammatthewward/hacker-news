{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": "airbnb",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "strict": [
            "error",
            "global"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "react/jsx-filename-extension": 0,
        "react/jsx-indent": [
            "error",
            4
        ],
        "babel/no-invalid-this": 1
    },
    "globals": {
        "shallow": true,
        "render": true,
        "mount": true
    },
    "plugins": [
        "babel",
        "import"
    ],
    "settings": {
        "import/resolver": "webpack"
    }
}