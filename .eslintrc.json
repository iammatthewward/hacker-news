{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": "airbnb",
    "rules": {
        "indent": ["error", 4],
        "strict": ["error", "global"],
        "arrow-parens": ["error", "as-needed"],
        "comma-dangle": ["error", "never"],
        "react/jsx-filename-extension": 0,
        "react/jsx-indent": ["error", 4]
    },
    "globals": {
        "shallow": true,
        "render": true,
        "mount": true
    },
    "plugins": ["import"],
    "settings": {
        "import/resolver": "webpack"
    }
}
